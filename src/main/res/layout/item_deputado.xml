<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="5dp"
    app:cardElevation="2dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">


        <ImageView
            android:id="@+id/iv_foto_deputado"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/tv_id_deputado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/acmeregular"
            android:text="id deputado"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_foto_deputado"
            app:layout_constraintTop_toTopOf="@+id/iv_foto_deputado" />

        <TextView
            android:id="@+id/tv_nome_deputado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/acmeregular"
            android:text="Deputado X"
            app:layout_constraintStart_toEndOf="@+id/iv_foto_deputado"
            app:layout_constraintTop_toBottomOf="@+id/tv_id_deputado" />

        <TextView
            android:id="@+id/tv_partido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Partido"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toEndOf="@+id/iv_foto_deputado"
            app:layout_constraintTop_toBottomOf="@+id/tv_nome_deputado" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

